{
  "label": "$SERVICE_NAME Deployment Policy",
  "description": "Deployment Policy",
  "service": {
    "name": "$SERVICE_NAME",
    "org": "$HZN_ORG_ID",
    "arch": "*",
    "serviceVersions": [
        {
            "version": "$SERVICE_VERSION",
            "priority":{}
        }
    ]
  },
  "properties": [
    {
      "name": "device-type",
      "value": "store-cluster"
    }
  ],
  "constraints": ["device-type == store-cluster", "store-brand == albertsons"],
  "secretBinding": [
    {
      "serviceUrl": "$SERVICE_NAME",
      "serviceOrgid": "$HZN_ORG_ID",
      "serviceArch": "$ARCH",
      "serviceVersionRange": "[0.0.0,INFINITY)", 
      "secrets": [
        {"ServiceNowApiKey": "ServiceNowApiKey"}
      ]
    }
]
}
